<header>

	<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">

		<a class="navbar-brand d-flex align-items-center justify-content-start mx-5" href="{{ path('welcome') }}">
			<img src="/images/logo.png" class="nav-logo mx-2" alt="">
			<h1 class="nav-title">Park-It</h1>
		</a>

		<button class="navbar-toggler mx-5" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse justify-content-end mx-5" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link text-white" href="{{ path('welcome') }}">Accueil</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-white" href="{{ path('user') }}">Espace Client</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-white" href="{{ path('user_parking') }}">Stationnement</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-white" href="{{ path('parking') }}">Parking</a>
				</li>
			</ul>
			{# User connecté #}
			{% if app.user %}
				<div class="dropdown">
					<a class="d-flex justify-content-end align-items-center mx-4" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
						<img src="/images/user_connect.png" class="nav-user" alt="">
						<i class="fas fa-caret-down fa-dropdown fa-lg"></i>
					</a>
					<div class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="dropdownMenuButton1">
						<p class="dropdown-header">Connecté à
							<b>
								<i>{{ app.user.username }}</i>
							</b>
						</p>
						<div class="dropdown-divider"></div>
						{% if app.user.roles[0] == "ROLE_ADMIN" %}
							<a class="dropdown-item active" href="{{ path('admin') }}">
								<i class="fas fa-tachometer-alt"></i>
								Dashboard Admin</a>
						{% endif %}
						<a class="dropdown-item" href="{{ path('user') }}">
							<i class="fas fa-user fa-fw"></i>
							Espace Client</a>
						<a class="dropdown-item" href="{{ path('user_invoice') }}">
							<i class="fas fa-file-invoice fa-fw"></i>
						</i>
						Voir mes factures</a>
					<a class="dropdown-item" href="{{ path('user_edit') }}">
						<i class="fas fa-user-cog fa-fw"></i>
						Modifier mon compte</a>
					<a class="dropdown-item" href="{{ path('app_logout') }}">
						<i class="fas fa-sign-out-alt fa-fw"></i>
						Se déconnecter</a>
				</div>
				{# User non connecté #}
			{% else %}
				<div class="dropdown">
					<a class="d-flex justify-content-end align-items-center mx-4" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
						<i class="fas fa-caret-down fa-dropdown fa-lg"></i>
						<img src="/images/user.png" class="nav-user" alt="">
					</a>
					<div class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="dropdownMenuButton">
						<a class="dropdown-item" href="{{ path('app_login') }}">
							<i class="fas fa-sign-in-alt fa-fw"></i>Se connecter</a>
						<a class="dropdown-item" href="{{ path('user_new') }}">
							<i class="fas fa-user-plus fa-fw"></i>S'abonner</a>
					</div>
				</div>
			{% endif %}
		</div>
	</nav>
</header>
