{% extends 'base.html.twig' %}

{% block title %}Parkit - Stationnement
{% endblock %}

{% block body %}
	<div class="container p-5">

		<div class="card shadow-lg">

			<div class="card-header p-4">
				<h1 class="h3 card-title font-weight-bold text-primary">
					Simulation de stationnement :
				</h1>

			</div>
			<div class="card-body p-4">

				{% if carparks %}

					<h2 class="h4">Un stationnement est en cours :</h2>
					<hr>

					<div class="card shadow-sm p-4 m-2">
						<div class="row d-flex justify-content-center align-items-center">
							<div class="col-6">
								<p class="text-muted">Parking :
								</p>
								<p class="h5">
									{{ carparks.parking.name }}</p>
							</div>
							<div class="col-3">
								<p class="text-muted">Arriv√©e :
								</p>
								<p class="h5">
									{{ carparks.arrival|format_datetime('medium', 'short') }}</p>
							</div>
							<div class="col-3">
								<a class="btn btn-lg btn-primary" href="{{ path('user_invoice_current', { id: carparks.id }) }}">Sortir</a>
							</div>
						</div>
					</div>

				{% else %}

					<h2 class="h4">Choisissez votre parking :</h2>
					<hr>

					{% for parking in parkings %}
						<div class="card shadow-sm p-4 m-2">
							<div class="row d-flex justify-content-center align-items-center">
								<div class="col-6">
									<p class="text-muted">Parking :
									</p>
									<p class="h5">
										{{ parking.name }}</p>
								</div>
								<div class="col-3">
									<p class="text-muted">Nb. de places :</p>
									<p class="h5">
										{{ parking.NbPlaces }}</p>
								</div>
								<div class="col-3">
									<a class="btn btn-lg btn-primary" href="{{ path('user_carpark', { id: parking.id }) }}">Stationner</a>
								</div>
							</div>
						</div>
					{% endfor %}

				{% endif %}

			</div>
		</div>
	</div>
{% endblock %}
